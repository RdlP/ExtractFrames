<Window x:Class="ConvertAviToFrames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Extraer Frames" Height="118" Width="363" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnOpen" Grid.Row="0" Grid.Column="1" Content="Cargar"  Click="btnOpen_Click"/>
            <Button x:Name="btnSave" Grid.Row="1" Grid.Column="1" Content="Guardar" Click="btnSave_Click"  />
            <TextBox Name="txtOpen" Grid.Row="0" Grid.Column="0" />
            <TextBox Name="txtSave" Grid.Row="1" Grid.Column="0" />

        </Grid>
        <Button Grid.Row="1" Name="btnAccept" Content="Extraer Frames" Click="btnAccept_Click" />
    </Grid>
</Window>
